<Window Background="{Binding Chosen.Brush}" x:Class="Video_Player_Remake.Models.ColorPicker"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Main color picker" Height="200" Width="400" ResizeMode="NoResize">
    <Grid>
        <StackPanel Width="300" VerticalAlignment="Center">
            <Label Content="Choose main color:"/>
            <ComboBox SelectedIndex="3" Margin="0,10" x:Name="cmbBox" SelectedItem="{Binding Chosen}" ItemsSource="{Binding Colors}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Background="{Binding Brush}" Text="{Binding Name}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <Button BorderThickness="0" Command="{Binding DialogResult}" Content="Save" IsDefault="True"/>
        </StackPanel>
    </Grid>
</Window>
